# Quorum Meeting Recorder - Environment Configuration
# Copy this file to .env and update the values for your environment
#
# SECURITY WARNING:
# - These are DEVELOPMENT defaults only
# - NEVER use these credentials in production
# - NEVER commit .env file to version control
# - Change all passwords and secrets before deploying

# Application Configuration
NODE_ENV=development
PORT=8000
LOG_LEVEL=info

# PostgreSQL Database Configuration
# Format: postgresql://[user]:[password]@[host]:[port]/[database]
DATABASE_URL=postgresql://quorum:quorum_dev@localhost:54320/quorum

# For Docker internal networking (when app runs in container)
# DATABASE_URL=postgresql://quorum:quorum_dev@postgres:5432/quorum

# Individual PostgreSQL components (if needed)
POSTGRES_HOST=localhost
POSTGRES_PORT=54320
POSTGRES_DB=quorum
POSTGRES_USER=quorum
POSTGRES_PASSWORD=quorum_dev

# Redis Configuration
# Format: redis://[host]:[port]/[db]
REDIS_URL=redis://localhost:63790/0

# For Docker internal networking (when app runs in container)
# REDIS_URL=redis://redis:6379/0

# Individual Redis components (if needed)
REDIS_HOST=localhost
REDIS_PORT=63790
REDIS_DB=0

# MinIO (S3-Compatible Object Storage) Configuration
MINIO_ENDPOINT=localhost:9100
MINIO_PORT=9100
MINIO_USE_SSL=false
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_REGION=us-east-1

# For Docker internal networking (when app runs in container)
# MINIO_ENDPOINT=minio:9000

# MinIO Bucket Names
MINIO_BUCKET_NAME=quorum-recordings
MINIO_BUCKET_RAW=recordings-raw
MINIO_BUCKET_ENCODED=recordings-encoded
MINIO_BUCKET_HAR=recordings-har

# MinIO Web Console
# Access at: http://localhost:9101
MINIO_CONSOLE_URL=http://localhost:9101

# JWT Configuration (for authentication)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d
JWT_ISSUER=quorum
JWT_AUDIENCE=quorum-api

# API Rate Limiting
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100

# File Upload Limits
MAX_FILE_SIZE=1073741824  # 1GB in bytes
MAX_RECORDING_DURATION=14400  # 4 hours in seconds

# Transcription Service Configuration (for future use)
# OPENAI_API_KEY=sk-...
# OPENAI_MODEL=whisper-1

# WebSocket Configuration
WS_PING_INTERVAL=30000  # 30 seconds
WS_PING_TIMEOUT=5000    # 5 seconds

# CORS Configuration
CORS_ORIGIN=http://localhost:3000,http://localhost:8000
CORS_CREDENTIALS=true

# Session Configuration
SESSION_SECRET=your-super-secret-session-key-change-this-in-production
SESSION_MAX_AGE=604800000  # 7 days in milliseconds

# Email Configuration (for future use)
# SMTP_HOST=smtp.example.com
# SMTP_PORT=587
# SMTP_USER=your-email@example.com
# SMTP_PASSWORD=your-password
# SMTP_FROM=noreply@quorum.example.com

# Monitoring and Observability
SENTRY_DSN=
SENTRY_ENVIRONMENT=development

# Feature Flags
ENABLE_REGISTRATION=true
ENABLE_WEBSOCKETS=true
ENABLE_FILE_UPLOAD=true
ENABLE_SWAGGER=true
ENABLE_METRICS=true

# Development Tools
ENABLE_DEBUG_LOGS=true
ENABLE_QUERY_LOGGING=false
